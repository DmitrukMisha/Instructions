@using Instructions.Models

@model Instructions.Models.Record

@{
    ViewBag.Title = "Record creating";
}
<script src="~/lib/dropzone/dropzone.js"></script>
<form asp-action="create" asp-controller="records">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input required type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input required type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ThemeName" class="control-label">Theme name</label>
        <select asp-for="ThemeName" class="form-control">
            @foreach (Theme theme in ViewBag.Themes)
            {
                <option>@theme.Themes</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label class="control-label">Tags</label>
        <input id="tag" type="text" class="form-control" name="Tags" />
    </div>
    <div class="clsbox-1" runat="server">
        <div class="dropzone clsbox" id="UploadFormRecord">

        </div>
    </div>
    <br />  
    <center>
        <div class="form-group">
            <input type="submit" value="Create new record" class="btn btn-default" />
        </div>
    </center>
    <div class="container">
        <div id="Steps"></div>
     </div>
</form>
<center>
    <input id="add" type="button" class="btn btn-primary" value="Add new step" />
</center>
<script type="text/javascript">
    $(function () {
        var items = JSON.parse('@ViewBag.Tags');
        function split(val) {
            return val.split(/ \s*/);
        }
        function extractLast(term) {
            return split(term).pop();
        }   

        $("#tag").
            autocomplete({
                minLength: 0,
                source: function (request, response) {
                    response($.ui.autocomplete.filter(
                        items, extractLast(request.term)));
                },
                focus: function () {
                    return false;
                },
                select: function (event, ui) {
                    var terms = split(this.value);
                    terms.pop();
                    terms.push(ui.item.value);
                    terms.push("");
                    this.value = terms.join(" ");
                    return false;
                }
            });
    });
</script>
<script type="text/javascript">
    $('#add').on('click', function (e) {

        Add();
    });
    function Add() {
        $.ajax({
            url: '/Records/NewStep',
            type: 'POST',
            cache: false,
            async: true,
            dataType: "html",
        })
            .done(function (result) {
                $('#Steps').append(result);
            }).fail(function (xhr) {
                console.log('error : ' + xhr.status + ' - ' + xhr.statusText + ' - ' + xhr.responseText);
            })
    };
</script>
<script type="text/javascript">
    Dropzone.autoDiscover = false;
    var myDropzone = new Dropzone("div#UploadFormRecord", {
        url: "Records/UploadFiles",
        maxFiles: 1,
        maxfilesexceeded: function (file) {
            alert("Only one file here");
            this.removeFile(file);
        } });
    
</script>
