@page
@model AdminMenuModel
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "AdminMenu";
    var users = UserManager.Users.ToList();

}

<h4>@ViewData["Title"]</h4>
@if (ViewData["EmailConfirm"].ToString() == "False")
{
    <script language="JavaScript">
        alert("Confirm your E-mail");
        location.href = "Index";
    </script>
}
    <input type="button" value="Themes" class="btn btn-outline-success" onclick="window.location='@Url.Action("AddTheme", "Home")'" />
<hr />
<form method="post">
    <table class="table">
        <tr>
            <th>Users:</th>
            <th>
                <button type="submit" asp-controller="Home" asp-action="MakeAdmin" class="btn btn-sm btn-success"> Make admin</button>
            </th>

            <th>
                <button type="submit" asp-controller="Home" asp-action="Lock" class="btn btn-sm btn-warning"> Lock</button>
            </th>
            <th>
                <button type="submit" asp-controller="Home" asp-action="Unlock" class="btn btn-sm btn-success"> Unlock</button>
            </th>
            <th>
                <button type="submit" asp-controller="Home" asp-action="Delete" class="btn btn-sm btn-danger"> Delete</button>
            </th>
            <th></th>
        </tr>
        <tr>
            <th>
                <input type="checkbox" onClick="toggle(this)" /> Toggle All<br />
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                User status
            </th>
            <th>
                Admin status
            </th>
        </tr>
        @foreach (var user in users)
        {
        <tr>
            <th>
                <input type="checkbox" name="selected" value="@user.Id" />
            </th>
            <td><a asp-controller="Home" asp-route-id="@user.Id" asp-action="UserPage">@user.UserName<span class="sr-only"></span></a></td>
            <td>@user.Email</td>
            <td>
                @if (user.Status)
                {<p style="color:green;">Unlocked</p>}
                else
                { <p style="color:orangered;">Locked</p>}
            </td>
            <td>
                @if (user.RoleISAdmin)
                {<p style="color:green;">Admin</p>}
                else
                { <p style="color:cornflowerblue;">User</p>}
            </td>
        </tr>

        }
    </table>
</form>
<script language="JavaScript">
    function toggle(source) {
        checkboxes = document.getElementsByName('selected');
        for (var i = 0, n = checkboxes.length; i < n; i++) {
            checkboxes[i].checked = source.checked;
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
